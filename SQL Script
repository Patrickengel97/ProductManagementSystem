    values ('35A', 39, 19.50, 5850, 2925, 150, 'M-DS')
    into template (templateid, templatewidth, templateheight, 
    pixelwidth, pixelheight, optimalresolution, printingmethodid)
    values ('36A', 43, 21.50, 6450, 3225, 150, 'M-DSP')
